div
  label(for="first_name") First Name:
  input(type="text", name="first_name" value=patron.first_name)
div
  label(for="last_name") Last Name:
  input(type="text", name="last_name" value=patron.last_name)
div
  label(for="address") Address:
  input(type="text", name="address" value=patron.address)
div
  label(for="email") Email:
  input(type="text", name="email" value=patron.email)
div
  label(for="library_id") Library Id:
  input(type="text", name="library_id" value=patron.library_id)
  div
  label(for="zip_code") Zip Code:
  input(type="text", name="zip_code" value=patron.zip_code)
input(type="submit", value="Update")
h2 Loan History
table
    thead
        tr
            th Book
            th Patron
            th Loaned On
            th Return By
            th Returned On
            th Action
    tbody
        for loan in loans
          tr
            td #{loan.Book.title}
            td 
              a(href='/patrons/' + loan.patron_id + '/edit') #{patron.first_name} #{patron.last_name}
            td #{loan.formatLoanedOn()}
            td #{loan.formatReturnBy()}
            td #{loan.formatReturnedOn()}
            td
              if loan.formatReturnedOn() === ''
              a.button(href='/loans/' + loan.id + '/return') Return Book

