extends ../partials/head
block content
    h1 #{book.title}
    form(action='/books/' + book.id method='post')
        p
            label.for("title") Title
            input(id="title", type="text", value=book.title)
        p
            label.for("author") Author
            input(id="author", type="text", value=book.author)
        p
            label.for("genre") Genre
            input(id="genre", type="text", value=book.genre)
        p
            label.for("first_published") First Published
            input(id="first_published", type="text", value=book.first_published)
    h2 Loan History
    table
        thead
            tr
                th Book
                th Patron
                th Loaned On
                th Return By
                th Returned On
                th Action
        tbody
            for loan in loans
              tr
                td #{book.title}
                td #{loan.Patron.first_name} #{loan.Patron.last_name}
                td #{loan.patron_id}
                td #{loan.formatLoanedOn()}
                td #{loan.formatReturnBy()}
                td #{loan.returned_on}
                td
                   if !loan.returned_on
                     a.button(href='/loans/' + loan.id) Return Book
    
